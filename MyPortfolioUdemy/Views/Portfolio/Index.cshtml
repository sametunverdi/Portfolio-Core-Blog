@model List<Portfolio>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Layout/Index.cshtml";
	int count = 0;
}
<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Projelerim</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Projelerim Sayfası</div>
					</div>
					<div class="card-body">
						
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Proje Adı</th>
									<th scope="col">Proje Alt Başlık</th>
									<th scope="col">Proje Link</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
                                    count++;
									<tr>
										<td>@count</td>
										<td>@item.Title</td>
										<td>@item.SubTitle</td>
										<td>@item.Url</td>
										<td><a href="/Portfolio/DeletePortfolio/@item.PortfolioId" class="btn btn-danger">SİL</a></td>
										<td><a href="/Portfolio/UpdatePortfolio/@item.PortfolioId" class="btn btn-success">GÜNCELLE</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Portfolio/CreatePortfolio/" class="btn btn-success">Yeni Proje Ekle</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

