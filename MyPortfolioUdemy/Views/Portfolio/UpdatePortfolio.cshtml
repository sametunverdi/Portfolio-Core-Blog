@model Portfolio
@{
    ViewData["Title"] = "UpdatePortfolio";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Projeler</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Proje Güncelleme Sayfası</div>
                    </div>
                    <div class="card-body">

                        <form method="post" enctype="multipart/form-data" asp-action="UpdatePortfolio">

                            <input type="hidden" asp-for="PortfolioId" />

                            <div class="form-group">
                                <label>Proje Adı</label>
                                <input type="text" asp-for="Title" class="form-control" />
                            </div>

                            <div class="form-group">
                                <label>Proje Alt Başlık</label>
                                <input type="text" asp-for="SubTitle" class="form-control" />
                            </div>

                            <div class="form-group">
                                <label>Yeni Görsel Seç (İsteğe bağlı)</label>
                                <input type="file" asp-for="ImageFile" class="form-control" />
                            </div>

                            <div class="form-group">
                                <label>Link</label>
                                <input type="text" asp-for="Url" class="form-control" />
                            </div>

                            <div class="form-group">
                                <label>Açıklama</label>
                                <textarea rows="4" class="form-control" asp-for="Description"></textarea>
                            </div>

                            <br />

                            <button class="btn btn-primary">Proje Güncelle</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>