@model About
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Hakkımda</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Hakkımda Bilgilerini Güncelle</div>
                    </div>
                    <div class="card-body">

                        <form method="post" asp-action="Index">

                            <input type="hidden" asp-for="AboutId" />

                            <div class="form-group">
                                <label>Hakkımda Başlık</label>
                                <input type="text" asp-for="Title" class="form-control" />
                            </div>

                            <div class="form-group">
                                <label>Açıklama</label>
                                <textarea rows="4" class="form-control" asp-for="SubDescription"></textarea>
                            </div>

                            <div class="form-group">
                                <label>Yaptıklarım Detaylar</label>
                                <textarea rows="4" class="form-control" asp-for="Details"></textarea>
                            </div>

                            <br />
                            <button class="btn btn-primary">Güncelle</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>