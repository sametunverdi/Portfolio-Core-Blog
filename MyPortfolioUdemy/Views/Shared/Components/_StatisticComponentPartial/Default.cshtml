<section id="stats" class="s-stats">
    <div class="row block-1-4 block-tab-1-2 block-mob-full stats">

        <div class="col-block stats__col stats__col--highlight">
            <div class="stats__count">
                <i class="im im-wrench" style="font-size: 3rem; display: block; margin-bottom: 10px;"></i>
                @ViewBag.s1
            </div>
            <h4>Yeteneklerim</h4>
        </div>

        <div class="col-block stats__col">
            <div class="stats__count">
                <i class="im im-mail" style="font-size: 3rem; display: block; margin-bottom: 10px;"></i>
                @ViewBag.s2
            </div>
            <h4>Gelen Mesajlar</h4>
        </div>

        <div class="col-block stats__col stats__col--highlight">
            <div class="stats__count">
                <i class="im im-briefcase" style="font-size: 3rem; display: block; margin-bottom: 10px;"></i>
                @ViewBag.s3
            </div>
            <h4>Deneyimlerim</h4>
        </div>

        <div class="col-block stats__col">
            <div class="stats__count">
                <i class="im im-image" style="font-size: 3rem; display: block; margin-bottom: 10px;"></i>
                @ViewBag.s4
            </div>
            <h4>Proje Görsellerim</h4>
        </div>

    </div>
</section>