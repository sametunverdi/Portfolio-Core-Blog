<section id="contact" class="s-contact target-section" >
   
        
    <div class="overlay"></div>

    <div class="row narrow section-intro" >
        <div class="col-full" >
            <h3>İletişim</h3>
            <h1>Bana Ulaşın</h1>

            <p class="lead">Her Türlü Soruyu Sorabilirsiniz Daha Sonra Mail Kutunuzu Kontorol Ediniz Kısa Zamanda Dönüş Yaparım...</p>
        </div>
    </div>

    <div class="row contact__main" >
        <div class="col-eight tab-full contact__form">
            <form name="contactForm" id="aspnetForm" method="post" asp-controller="Default" asp-action="SendMessage">
                <fieldset>

                    <div class="form-field">
                        <input name="NameSurname" type="text" id="contactName" placeholder="Adınız" value="" minlength="2" required="" aria-required="true" class="full-width">
                    </div>

                    <div class="form-field">
                        <input name="Email" type="email" id="contactEmail" placeholder="Email" value="" required="" aria-required="true" class="full-width">
                    </div>

                    <div class="form-field">
                        <input name="Subject" type="text" id="contactSubject" placeholder="Konu" value="" class="full-width">
                    </div>

                    <div class="form-field">
                        <textarea name="MessageDetail" id="contactMessage" placeholder="Mesajınız" rows="10" cols="50" required="" aria-required="true" class="full-width"></textarea>
                    </div>

                    <div class="form-field">
                        <button class="full-width btn--primary">Gönder</button>
                        <div class="submit-loader">
                            <div class="text-loader">Gönderiliyor...</div>
                            <div class="s-loader">
                                <div class="bounce1"></div>
                                <div class="bounce2"></div>
                                <div class="bounce3"></div>
                            </div>
                        </div>
                    </div>

                </fieldset>
            </form>

            <!-- contact-warning -->
            <div class="message-warning">
                Something went wrong. Please try again.
            </div>

            <!-- contact-success -->
            <div class="message-success">
                Your message was sent, thank you!<br>
            </div>

        </div>
